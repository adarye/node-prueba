<%- contentFor('body') %>
    <%- contentFor('body') %>
        <h2>Clientes </h2>
        <a href="/cliente/view/new" class="btn btn-outline-success mb-3"><i class='bx bx-plus bx-lg'></i></a>


        <div class="row mb-3">
            <form action="/cliente/buscar" method="GET">
                <div class="input-group">
                    <div class="col-md-4 ">
                        <input type="text" class="form-control" name="param" placeholder="Buscar por nombre">
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-success" type="submit"><i class="bx bx-search"></i></button>
                    </div>
            </form>
            </div>

        </div>
        <table class="table table-hover bg-light">
            <thead class="bg-template text-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Direcci√≥n</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach((cliente, index)=> { %>
                    <tr>
                        <th scope="row">

                            <%= index + 1  %>

                        </th>
                        <td>
                            <%= cliente.id  %>
                        </td>
                        <td>
                            <%= cliente.email  %>
                        </td>
                        <td>
                            <%= cliente.nombre  %>
                        </td>
                        <td>
                            <%= cliente.direccion  %>
                        </td>
                        <td>
                            <a href="/cliente/view/edit/<%=cliente.id %>" class="btn btn-success"><i class='bx bxs-edit'></i></a>
                            <a href="/cliente/delete/<%=cliente.id %>" class="btn btn-danger"><i class='bx bxs-trash' ></i></a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>